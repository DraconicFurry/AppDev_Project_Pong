<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@drawable/pong_background">
<TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/main_title"
        android:textSize="25sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text_highscore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_pong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_pong"/>

    <Button
        android:id="@+id/button_breakout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_breakout"/>

    <Button
        android:id="@+id/button_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_name"/>
    </LinearLayout>

</LinearLayout>